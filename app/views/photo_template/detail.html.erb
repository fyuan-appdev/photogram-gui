<h2>Comments</h2>

<table border="0">
  <tr>
    <th>
      Commenter
    </th>
    <th>
      Comment
    </th>
    <th>
      Posted
    </th>
  </tr>
  
  <% @commenter.each do |a_comment|%>
    <tr>
      <td><%= a_comment.author_id %></td>
      <td><%= a_comment.body %></td>
      <td><%= a_comment.created_at %></td>
    </tr>
  <%end%>
</table>

