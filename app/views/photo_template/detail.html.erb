<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src="<%= @photo.image %>">
  </dd>

  <dt>Caption</dt>
  <dd>
    <p><%=@photo.caption%></p>
  </dd>

  <dt>Owner</dt>
  <dd>
    <%=@photo.poster.username%>
  </dd>

  <dt>Posted</dt>
  <dd>
    <%=@photo.created_at%>
  </dd>

