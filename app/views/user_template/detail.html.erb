<h1><%= @user.username%></h1>

<dl>
  <dt>ID</dt>

  <dd><%= @user.id%></dd>

  <dt>Edit user</dt>

  <dd>TBD form</dd>
</dl>


<h2>Own photos (<%= @user.own_photos.count %>)</h2>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>

<% @user.own_photos .each do |a_photo|%>
  <tr>
    <td><img src="<%= a_photo.image %>"></td>
    <td><%= @user.username %></td>
    <td><%= a_photo.caption %></td>
    <td><%= a_photo.created_at %></td>
    <td>
          <a href="/photos/<%= a_photo.id %>">
        Show details
    </td>
  </tr>
<%end%>
